<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.travelplanner.activities.FtueActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/tvWelcomeFtue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Welcome to Travel Planner"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnSkipFtue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvWelcomeFtue"
        android:onClick="onSkipPressed"
        android:layout_marginBottom="14dp"
        android:text="Skip" />

</RelativeLayout>

